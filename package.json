{
  "name": "download-organizer",
  "version": "v1.0.0",
  "type": "module",
  "description": "A script to organize your downloads folder in the background",
  "main": "./src/app.js",
  "bin": "./dist/bundle.js",
  "scripts": {
    "start": "node ./src/app.js",
    "build": "pnpm bundle && pkg . --targets node18-win-x64 --output ./dist/download-organizer.exe --no-bytecode",
    "bundle": "esbuild ./src/app.js --bundle --platform=node --target=node18 --outfile=dist/bundle.js --format=cjs"
  },
  "keywords": [
    "download",
    "organize"
  ],
  "author": "Miguel Trabuco (Trabuco Labs)",
  "license": "MIT",
  "packageManager": "pnpm@10.24.0",
  "dependencies": {
    "chokidar": "^5.0.0"
  },
  "devDependencies": {
    "esbuild": "^0.27.0",
    "pkg": "^5.8.1"
  }
}
